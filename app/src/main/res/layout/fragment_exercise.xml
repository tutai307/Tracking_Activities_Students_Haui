<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="16dp"
        tools:context=".ui.exercise.ExerciseFragment">

        <!-- Title Section -->
        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Rèn luyện hàng ngày"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Information Section -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Rows for BMI, Status, and Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BMI:"
                    android:textColor="#333"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Chỉ số đo trạng thái"
                    android:textColor="#666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tình trạng:"
                    android:textColor="#333"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Trạng thái theo BMI"
                    android:textColor="#666"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiến độ:"
                    android:textColor="#333"
                    android:textSize="16sp" />
                <ProgressBar
                    android:id="@+id/pgbTienTrinh"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:progress="50"
                    android:progressTint="#4CAF50" />
            </LinearLayout>

            <!-- Exercise Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Thời gian tập"
                    android:textColor="#333"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/edtTimeExercise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/rounded_edit_text"
                    android:ems="3"
                    android:inputType="number"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:textAlignment="center"
                    android:layout_marginRight="10sp"
                    android:text="30"
                    android:textColor="#333" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="phút"
                    android:textColor="#333"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Task Checklist -->
        <LinearLayout
            android:id="@+id/taskChecklist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/infoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhiệm vụ hàng ngày:"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Drink Water and Exercise Checkboxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <CheckBox
                    android:id="@+id/chkDrinkWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uống đủ nước" />
                <TextView
                    android:id="@+id/txtQuantityWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2 lít)"
                    android:textColor="#666"
                    android:paddingStart="8dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <CheckBox
                    android:id="@+id/chkDoExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tập thể dục" />
                <TextView
                    android:id="@+id/txtDoExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Khuyến khích 15p)"
                    android:textColor="#666"
                    android:paddingStart="8dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Date and History Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16sp"
            android:background="@drawable/rounded_edit_text"
            app:layout_constraintTop_toBottomOf="@id/taskChecklist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:padding="8dp">

                <!-- Start Date Row -->
                <TableRow>
                    <TextView
                        android:id="@+id/txtStartDateLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="8dp"
                        android:text="Ngày bắt đầu:"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="30/07/2024"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/imbStart"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/baseline_calendar_today_24"
                        android:contentDescription="Chọn ngày bắt đầu"
                        app:tint="#4CAF50" />
                </TableRow>

                <!-- End Date Row -->
                <TableRow>
                    <TextView
                        android:id="@+id/txtEndDateLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="8dp"
                        android:text="Ngày kết thúc:"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="01/12/2024"
                        android:textColor="#999999"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/imbEnd"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/baseline_calendar_today_24"
                        android:contentDescription="Chọn ngày kết thúc"
                        app:tint="#4CAF50" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnViewHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50"
                android:text="Xem Lịch Sử"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>