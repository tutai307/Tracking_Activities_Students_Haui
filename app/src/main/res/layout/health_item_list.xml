<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNameCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thiết kế Web"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#39833C"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitleTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tiết:"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1,2,3"
            android:textSize="16dp"
            android:layout_weight="4"/>
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitleInstructorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Giảng viên:"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtInstructorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thái Cường"
            android:textSize="16dp"
            android:layout_weight="4"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitleDisease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tình trạng:"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtTinhTrang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bình thường"
            android:textSize="16dp"
            android:layout_weight="4"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitleGhiChu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bệnh:"
            android:textSize="16dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtDisease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bình thường"
            android:textSize="16dp"
            android:layout_weight="4"/>


    </TableRow>


</LinearLayout>