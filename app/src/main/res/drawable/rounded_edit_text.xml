<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Màu nền của EditText -->
    <solid android:color="#FFFFFF" />
    <!-- Viền bo tròn -->
    <corners android:radius="8dp" />
    <!-- Tạo đường viền cho EditText -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
    <!-- Padding bên trong EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
